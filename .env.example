# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/kinetic_db
DATABASE_SYNC_URL=postgresql://postgres:password@localhost:5432/kinetic_db

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true
RELOAD=true

# FAISS Configuration
FAISS_INDEX_PATH=data/embeddings/face_index.faiss
FAISS_METADATA_PATH=data/embeddings/metadata.json
SIMILARITY_THRESHOLD=0.75
TOP_K_RESULTS=10

# Face Detection Configuration
FACE_MODEL_NAME=buffalo_l
FACE_DET_SIZE=640
FACE_CTX_ID=0

# Storage Configuration
UPLOAD_DIR=data/raw
PROCESSED_DIR=data/processed
MAX_FILE_SIZE_MB=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# QR/Session Configuration
SESSION_EXPIRE_MINUTES=30
QR_BASE_URL=http://localhost:3000
